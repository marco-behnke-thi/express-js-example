{% layout "../layout" %}
{% block content %}
  <h1>Welcome, {{ username }}!</h1>
  <p>You are successfully logged in.</p>

  <h2>Session Information</h2>
  <div style="background: #f5f5f5; padding: 15px; margin: 10px 0; border-radius: 5px;">
    <p><strong>User ID:</strong> {{ user.id | default: 'N/A' }}</p>
    <p><strong>Username:</strong> {{ user.username | default: 'N/A' }}</p>
    <p><strong>Admin Status:</strong> {% if user.isAdmin %}Yes{% else %}No{% endif %}</p>
    <p><strong>Login Status:</strong> {% if user.loggedIn %}Logged In{% else %}Not Logged In{% endif %}</p>
    <p><strong>Login Time:</strong> {{ user.loginTime | default: 'N/A' }}</p>
  </div>

  <form method="POST" action="/users/api/logout">
    <button type="submit">Logout</button>
  </form>
{% endblock %}