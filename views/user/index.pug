extends ../layout

block content
  h1 Welcome, #{username}!
  p You are successfully logged in.
  
  h2 Session Information
  div(style='background: #f5f5f5; padding: 15px; margin: 10px 0; border-radius: 5px;')
    p <strong>User ID:</strong> #{user.id || 'N/A'}
    p <strong>Username:</strong> #{user.username || 'N/A'}
    p <strong>Admin Status:</strong> #{user.isAdmin ? 'Yes' : 'No'}
    p <strong>Login Status:</strong> #{user.loggedIn ? 'Logged In' : 'Not Logged In'}
    p <strong>Login Time:</strong> #{user.loginTime || 'N/A'}
  
  form(method='POST', action='/users/api/logout')
    button(type='submit') Logout